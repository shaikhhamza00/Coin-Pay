<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoinPay"
        tools:targetApi="31">
        <activity
            android:name=".Transaction"
            android:exported="false"
            android:label="@string/title_activity_transaction"
            android:theme="@style/Theme.CoinPay" />
        <activity
            android:name=".CommonScaffold"
            android:exported="false"
            android:label="@string/title_activity_common_scaffold"
            android:theme="@style/Theme.CoinPay" />
        <activity
            android:name=".TransactionsDetails"
            android:exported="false"
            android:label="@string/title_activity_transactions_details"
            android:theme="@style/Theme.CoinPay" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.CoinPay" />
        <activity
            android:name=".LoginScreen"
            android:exported="false"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.CoinPay" />
        <activity
            android:name=".Signup"
            android:exported="false"
            android:label="@string/title_activity_signup"
            android:theme="@style/Theme.CoinPay" />
        <activity
            android:name=".OnboardingScreen"
            android:exported="false"
            android:label="@string/title_activity_onboarding_screen"
            android:theme="@style/Theme.CoinPay" />
        <activity
            android:name=".AnimatedSplashScreen"
            android:exported="false"
            android:label="@string/title_activity_animated_splash_screen"
            android:theme="@style/Theme.CoinPay" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CoinPay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>